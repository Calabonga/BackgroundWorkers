<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.1</TargetFramework>
        <Version>2.0.0</Version>
        <PackageVersion>2.0.0</PackageVersion>
        <AssemblyVersion>2.0.0</AssemblyVersion>
        <FileVersion>2.0.0</FileVersion>
        <Authors>Calabonga</Authors>
        <Company>Calabonga SOFT</Company>
        <Description>Background workers collection for ASP.NET Core application. CronTab-schedule available.</Description>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageTags>calabonga, CronTab, background, worker, microservices, hosted, service, aspnetcore, core, hostedservice</PackageTags>
        <PackageReleaseNotes>Readme updated</PackageReleaseNotes>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Copyright>Calabonga</Copyright>
        <PackageProjectUrl>https://github.com/Calabonga/BackgroundWorkers</PackageProjectUrl>
        <PackageIconUrl>http://www.calabonga.net/images/logo.png</PackageIconUrl>
        <PackageIcon>logo.png</PackageIcon>
        <Nullable>enable</Nullable>
        <Title>BackgroundWorkers for Microservices</Title>
        <RepositoryUrl>https://github.com/Calabonga/BackgroundWorkers</RepositoryUrl>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <RepositoryType>git</RepositoryType>
        <LangVersion>8.0</LangVersion>
    </PropertyGroup>

    <ItemGroup>
        <None Include="..\..\README.md">
          <Pack>True</Pack>
          <PackagePath>\</PackagePath>
        </None>
    </ItemGroup>

    <ItemGroup>
        <Folder Include="Exceptions\" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="7.0.0" />
        <PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" Version="7.0.0" />
        <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="7.0.0" />
        <PackageReference Include="ncrontab" Version="3.3.1" />
    </ItemGroup>

    <ItemGroup>
      <None Update="logo.png">
        <Pack>True</Pack>
        <PackagePath>\</PackagePath>
      </None>
    </ItemGroup>

</Project>
